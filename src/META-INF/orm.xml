<entity-mappings
	xmlns="http://www.eclipse.org/eclipselink/xsds/persistence/orm"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	version="2.1">
	

	<entity class="com.gannimerchant.offers.domain.Merchant">
	
		<named-query name="searchByFirstName">
		
			<query>
				SELECT merchant FROM Merchant merchant WHERE merchant.firstName = :name
			</query>
		
		</named-query>
	
	</entity>
	
</entity-mappings>
